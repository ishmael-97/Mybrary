<!--Used Underscore: Indicate that this is a partial file-->
<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>
<!--For the Author we have a select Box for a field-->
<div>
    <label>Author</label>
    <select name="author">
    <% author.forEach(author => { %>
        <% if (author.id === book.author) { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>" >
    <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>">
    <% } %>
    <% }) %>
    </select>
</div>
<div>
    <label>Publish Date</label>
    <!--Tricky JS part: We remove the portion that has time by splitting where there is a T and taking only the first portion-->
    <input type="date" name="publishDate" 
        value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Page Count</label>
    <!--Tricky JS part: We remove the portion that has time by splitting where there is a T and taking only the first portion-->
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>
<div>
    <label>Cover</label>
    <!--Tricky JS part: We remove the portion that has time by splitting where there is a T and taking only the first portion-->
    <input type="file" name="cover" >
</div>
<div>
    <label>Description</label>
    <!--Tricky JS part: We remove the portion that has time by splitting where there is a T and taking only the first portion-->
    <textarea name="description"><%= book.description %></textarea>
</div>